    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>ChangeEmail</h2>
@if (Request.IsAuthenticated)
{
    <div>
    This is your email: <b>@ViewBag.email1</b>
    @using (Html.BeginForm())
    {
        @Html.EditorForModel()
        <button type="submit">OK</button>
    }
    <p>The ability to change email is not working as intended.  It does not save the email change and does not apply email change to Instructor and Student tables.</p>
    <p>Need to use something along the lines of: String userName = MembershipProvider.GetUserNameByEmail(email)</p>
    </div>
}