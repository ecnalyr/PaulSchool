@model PaulSchool.Models.ApplicationCommissioning

@{
    ViewBag.Title = "Apply for Commissioning or ReCommissioning";
}

<h2>Apply for Commissioning or ReCommissioning</h2>
<h4>
    You <span class="redtext">@ViewBag.doOrDoNotQualify</span> meet the basic course requirement according to this database's records.
    <p>*Note that courses completed more than 7 years ago do not count toward Commissioning or ReCommissioning.</p>
</h4>

<table>
    <tr>
        <td></td>
        <td>
            You have completed
        </td>
        <td>
            Required
        </td>
    </tr>
    <tr>
        <td>
            Core Classes
        </td>
        <td>
            @ViewBag.coresPassed
        </td>
        <td>
            @ViewBag.totalCoresNeeded
        </td>
    </tr>
    <tr>
        <td>
            Elective Classes
        </td>
        <td>
            @ViewBag.electivesPassed
        </td>
        <td>
            @ViewBag.totalElectivesNeeded
        </td>
    </tr>
    <tr>
        <td>
            Day of Reflection
        </td>
        <td>
            @ViewBag.completedDayOfReflection
        </td>
        <td>
            One Day of Reflection
        </td>
    </tr>
</table>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<br/>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Application</legend>
        <div class="editor-label">
            Are you Re-Applying for Commissioning? (leave un-checked if you have not been Commissioned before)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ReCommissioning)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PersonalStatement)
            <p>
                Please provide a brief statement addressing your desire to be commissioned.
            </p>
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.PersonalStatement, new { style = "width: 100%" })
            @Html.ValidationMessageFor(model => model.PersonalStatement)
        </div>
        
        <p>
            In addition to your profile information, you are responsible for providing/completing the following steps to the Department of Evangelization and Catechesis Office of Religious Education at the St. Paul School of Catechesis:
        </p>
        <li>
            A Recommendation form from a Pastor, parish catechetical leader (DRE), principal, or ministry supervisor attesting to competence as a qualified catechist (@Html.ActionLink("printable here", "RecommendationForm")).
        </li>
        <li>
            You must have completed a Diocesan sponsored day of reflection.
        </li>
        <li>
            You must have paid the Application Fee (submit in person along with above recommendation form).
        </li>
        <p>
            Please speak to an Admin if you have any questions.
        </p>
        <p>
            Please note that Commissioning expires after 5 years.  You will need to apply to be Re-Commissioned at that time.
        </p>

        <p>
            <input type="submit" value="Submit Application" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
