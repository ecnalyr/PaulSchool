<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("themes/ui-lightness/jquery-ui-1.8.19.custom.css")" rel="stylesheet"
              type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.19.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"  type="text/javascript"> </script>
        @RenderSection("Header", false)
    </head>
    <body>
        <div class="page">
            <div id="header">
                <div id="title">
                    <h1>St. Paul School of Catechesis</h1>
                </div>
                <div id="logindisplay">
                    @Html.Partial("_LogOnPartial")
                </div>
                <div id="menucontainer">
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home", new {area = ""}, null)</li>
                        <li>@Html.ActionLink("Students", "Index", "Student", new {area = ""}, null)</li>
                        <li>@Html.ActionLink("Courses", "Index", "Course", new {area = ""}, null)</li>
                        <li>@Html.ActionLink("Instructors", "Index", "Instructor", new {area = ""}, null)</li>
                        <li>@Html.ActionLink("Your Classes", "UsersCourseList", "Course", new {area = ""}, null)</li>
                        <li>@Html.ActionLink("Classes You Teach", "TeachingCourseList", "Course", new {area = ""}, null)</li>
                        <li>@Html.ActionLink("User Administration", "Index", "UserAdministration", new {area = "MvcMembership"}, null)</li>
                        <li>@Html.ActionLink("Notifications", "Index", "Notification", new {area = ""}, null)</li>
                    </ul>
                </div>
            </div>
            <div id="main">
                @RenderBody()
            </div>
            <div id="footer">
            </div>
        </div>
    </body>
</html>