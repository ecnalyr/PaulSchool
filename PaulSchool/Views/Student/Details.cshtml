@model PaulSchool.Models.Student

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Student</legend>
    
    <div class="display-label">User Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserName)
    </div>

    @Html.DisplayForModel()

    @{if (User.IsInRole("Administrator"))
      {
        <!--Admin Only Section - needs links to classes-->
        <div class="display-label">
        Class History as viewed by Admin
        </div>
        <div class="display-field">
        <table>
            <tr>
                <th>Course Title</th>
                <th>Grade</th>
                <th>Completion Date</th>
            </tr>
            @foreach (var item in Model.Enrollments)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Course.Title, "Details", "Course", new { id = item.Course.CourseID }, "a")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.EndDate)
                    </td>
                </tr>
            }
        </table>
        </div> 
      }
      else
      {
        <div class="display-label">
        Class History
        </div>
        <div class="display-field">
        <table>
            <tr>
                <th>Course Title</th>
                <th>Grade</th>
                <th>Completion Date</th>
            </tr>
            @foreach (var item in Model.Enrollments)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.EndDate)
                    </td>
                </tr>
            }
        </table>
        </div>

      }
    }

</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.StudentID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
