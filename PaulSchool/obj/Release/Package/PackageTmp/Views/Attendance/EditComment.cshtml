@model PaulSchool.ViewModels.EditCommentGradeViewModel

@{
    ViewBag.Title = "EditComment";
}

<h2>EditComment</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Enrollment</legend>
        
        @Html.HiddenFor(model => model.EnrollmentID)
        
        <div class="editor-label">
            @Html.DisplayText("Name")
        </div>
        <div>
            @Html.DisplayFor(model => model.Student.FirstMidName) @Html.DisplayFor(model => model.Student.LastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Grade)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Grade, Model.Grades)
            @Html.ValidationMessageFor(model => model.Grade)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comments)*
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Comments)
            @Html.ValidationMessageFor(model => model.Comments)
        </div>
        
        <p>
            *Note that comments are visible by the Student and Instructor involved as well as Admin.
        </p>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

